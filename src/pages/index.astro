---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import '../styles/global.css'
---

<Layout title="Welcome to yourlostitem.">
  <main>
    <h1>Welcome to <span class="text-gradient">yourlostitem</span></h1>
    <p class="instructions">
      A simple, fast and beautiful platfrom to search for things.
    </p>
    <!--- <Icon name="faMagnifyingGlassLocation" /> --->
    <ul role="list" class="link-card-grid">
      <Card
        href="https://github.com/yourlostitem"
        title="Main Org"
        body="See the code and other things for this site."
      />
      <Card
        href="https://github.com/yourlostitem/Web"
        title="Web"
        body="The source code for this website."
      />
	  <Card
        href="/roadmap/"
        title="Roadmap"
        body="The roadmap for this website."
      />
	  <Card
        href="/about/"
        title="About"
        body="About the people making this website."
      />
    </ul>
  </main>
</Layout>

<script>
	if (window.location.hostname.includes("yourlostitem.pages.dev")) {
		window.location.href = `https://yourlostitem.okit.works${window.location.pathname}`;
	}
</script>
